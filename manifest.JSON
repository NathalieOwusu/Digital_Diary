{
  "manifest_version": 3,
  "name": "Mood Diary",
  "description": "Save your daily mood and receive a positive affirmation.",
  "version": "1.0",
  "action": {
    "default_popup": "MoodDiary.html",
  "default_icon": { "16": "Assets/icon.png", "48": "Assets/icon.png", "128": "Assets/icon.png"}
  },
  "permissions": ["storage"],
  "host_permissions": ["https://www.affirmations.dev/"],

  "icons": {
    "16": "Assets/icon.png", 
    "48": "Assets/icon.png", 
    "128": "Assets/icon.png"}

  }

